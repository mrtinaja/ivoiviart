{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "jsx": "react-jsx", // Necesario para React 17+ y TypeScript
    "strict": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true
  },
  "include": ["src"]
}
